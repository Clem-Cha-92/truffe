<div class="container">
  <h1><%= @dog.name.capitalize %>'s profil</h1>

  <ul>
    <li>Breed : <%= @dog.breed.capitalize %></li>
    <li>Age : <%= @dog.age %></li>
    <li>Category : <%= @dog.category.capitalize %></li>
    <li>Description : <%= @dog.description.capitalize %></li>
  </ul>

  <h3>Reviews</h3>
  <ul>
    <li>Average rating: <%= @aggregated_reviews %></li>
    <hr>
    <% @reviews.each do |review| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= review.rating.nil? ? "No rating yet" : "#{review.rating}" %></h2>
        <p><%= review.comment %></p>
      </div>
    </div>
    <% end %>
  </ul>
</div>
