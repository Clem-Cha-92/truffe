<div class="container">
  <h1><%= @dog.name.capitalize %>'s profil</h1>

  <ul>
    <% @dog.photos.each do |photo| %>
      <%= cl_image_tag photo.key %>
    <% end %>
    <li>Breed : <%= @dog.breed.capitalize %></li>
    <li>Age : <%= @dog.age %></li>
    <li>Category : <%= @dog.category.capitalize %></li>
    <li>Description : <%= @dog.description.capitalize %></li>
  </ul>
  <%= render 'form', booking: @booking %>
  <hr>
  <h3>Reviews</h3>
  <ul>
    <li>Average rating: <%= @aggregated_reviews %></li>
    <% @reviews.each do |review| %>
    <div class="card-product">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos">
        <h2><%= review.rating.nil? ? "No rating yet" : "#{review.rating}" %></h2>
        <p><%= review.comment %></p>
      </div>
    </div>
    <% end %>
  </ul>
  <%# if policy(@Dog).edit? %>
    <%#= link_to "Update", dog_path(@dog)%>
  <%# end %>
</div>
