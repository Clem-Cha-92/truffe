<%= form_tag dogs_path, class:"simple_form search-index", method: :get do %>
  <div class="search-bar search-transition">

    <div class="search-bar-item item-1">
      <p>Category</p>
      <%= select_tag :category,
        options_for_select(Dog::DOG_CATEGORY, selected: params[:category]),
        :include_blank => true %>
    </div>

    <div class="search-bar-item item-2">
    <p>Breed</p>
    <%= select_tag :breed,
        options_for_select(Dog.all.pluck(:breed).uniq, selected: params[:breed]),
        :include_blank => true %>
    </div>

    <div class="search-bar-item item-3">
    <p>Start date</p>
      <%= date_field_tag :start_date,
          params[:start_date],
          class: "datepicker" %>
    </div>

    <div class="search-bar-item item-4">
      <p>End date</p>
      <%= date_field_tag :end_date,
          params[:end_date],
          class: "datepicker"  %>
    </div>

  <button name="button" type="submit" class="btn btn-flat">
    <i class="fas fa-paw" style="font-size: 25px;"></i>
  </button>
  </div>
<% end %>
