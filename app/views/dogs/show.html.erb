<%= render "shared/searchbar" %>

<div class="container dog-show">
  <h1>üê∂ Welcome to <%= @dog.name.capitalize %> world üê∂</h1>

  <ul>
    <% @dog.photos.each do |photo| %>
      <%= cl_image_tag photo.key %>
    <% end %>
    <div class="flex justify-content-between">
      <div class="flex">
        <li>‚≠ê <%= @aggregated_reviews %></li>
        <li>üêï <%= @dog.breed.capitalize %></li>
        <li>‚è≥ <%= @dog.age %> y.o.</li>
        <li>ü¶¥ <%= @dog.category.capitalize %></li>
      </div>
      <li><em>"<%= @dog.description.capitalize %>"</em></li>
    </div>
  </ul>
  <hr>
  <div class="row">
    <div class="flex col-12 col-sm-6 col-my-3">
      <div class="">
        <img class="front-picture" src="https://a0.muscache.com/im/pictures/5cac9e7b-8b9f-4e56-8746-3e73ff2bf52e.jpg?im_w=720" style="object-fit: cover;">
      </div>
      <div class="">
        <img class="mid-picture" src="https://a0.muscache.com/im/pictures/dbc5696f-5d1c-4632-b5a8-197f27a11348.jpg?im_w=720" style="object-fit: cover; vertical-align: bottom;">
        <img class="mid-picture" src="https://a0.muscache.com/im/pictures/dbc5696f-5d1c-4632-b5a8-197f27a11348.jpg?im_w=720" style="object-fit: cover; vertical-align: bottom;">
      </div>
      <div>
        <img class="side-picture-top" src="https://a0.muscache.com/im/pictures/dbc5696f-5d1c-4632-b5a8-197f27a11348.jpg?im_w=720" style="object-fit: cover; vertical-align: bottom;">
        <img class="side-picture-bottom" src="https://a0.muscache.com/im/pictures/dbc5696f-5d1c-4632-b5a8-197f27a11348.jpg?im_w=720" style="object-fit: cover; vertical-align: bottom;">
      </div>
    </div>
  </div>

  <hr>
  <h3>Reviews</h3>
  <ul>
    <% if @dog.reviews.nil? %>
      <small><em class="px-3">This dog has no reviews for now</em></small>
    <% end %>
    <% @dog.reviews.each do |review| %>
      <div class="card-product">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
        <div class="card-product-infos">
          <h2><%= review.rating.nil? ? "No rating yet" : "#{review.rating}" %></h2>
          <p><%= review.comment %></p>
        </div>
      </div>
    <% end %>
  </ul>
  <%# if policy(@Dog).edit? %>
    <%#= link_to "Update", dog_path(@dog)%>
  <%# end %>
  <div class="col-12 col-sm-6 my-3">
    <div class="form">
      <h5>Book this dog</h5>
        <%= simple_form_for [@dog, @booking] do |f| %>
        <%= f.input :start_date, as: :date, html5: true  %>
        <%= f.input :end_date, as: :date, html5: true  %>
        <%= f.submit class: "button-first" %>
      <% end %>
    </div>
  </div>
</div>
